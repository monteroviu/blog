<div  style="width:90%; margin:0 auto;"">
<% @articles.each do |article|%>

  <h1><%= link_to article.title, article %></h1>
  <div>
    <%= article.body %> - <%= link_to "Eliminar", article, method: :delete, data: { confirm: "Estás seguro de que quieres eliminar el artículo #{ article.title } ?" }, class:"red" %>
    <% if article.may_publish? %>
       - <%= link_to "publicar", "/articles/#{article.id}/publish", class:"blue", method: :put %>
    <%end%>
  </div>
  <%end%>
</div>
